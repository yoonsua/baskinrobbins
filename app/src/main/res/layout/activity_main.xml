<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 메뉴바 -->
    <LinearLayout
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:visibility="invisible">

        <!-- 메뉴바 Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#FF7C98"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:src="@drawable/txt_login"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:src="@drawable/txt_join"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:src="@drawable/hamburger"
                android:layout_marginLeft="140sp"/>

        </LinearLayout>

        <!-- nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nav_favor"/>

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_nav"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nav_menu"/>

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_nav"
                    android:layout_gravity="center"
                    android:layout_marginLeft="170sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nav_event"/>

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_nav"
                    android:layout_gravity="center"
                    android:layout_marginLeft="170sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nav_store"/>

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_nav"
                    android:layout_gravity="center"
                    android:layout_marginLeft="170sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nav_about"/>

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_nav"
                    android:layout_gravity="center"
                    android:layout_marginLeft="170sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- sns icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20sp"
            android:paddingRight="20sp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_facebook"
                android:layout_weight="1"
                android:padding="10sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_blog"
                android:layout_weight="1"
                android:padding="10sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_twitter"
                android:layout_weight="1"
                android:padding="10sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_instagram"
                android:layout_weight="1"
                android:padding="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 메인 화면 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:padding="12sp"/>

            <ImageView
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:src="@drawable/txt_fom"
                android:layout_gravity="center"
                android:layout_marginLeft="130sp"/>

            <ImageView
                android:layout_width="55sp"
                android:layout_height="wrap_content"
                android:src="@drawable/txt_store"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:src="@drawable/hamburger_color"
                android:layout_marginLeft="30sp"/>

        </LinearLayout>

        <!-- Main -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:src="@drawable/main_header"/>

            <view
                android:layout_width="wrap_content"
                android:layout_height="440sp"
                class="android.support.v4.view.ViewPager"
                android:id="@+id/viewpager" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>